/* pages/order/order.wxss */
.main{
    position: relative;
    width: 320px;
    height: 568px;
    background-color: #f1f1f1; 
    display: flex;
    flex-direction: column;
    align-items: center; 
}
.container{
    position: relative;
    width: 675rpx;
    height: 285rpx;
    border-radius: 10rpx;
    margin-top: 40rpx;
    background-color: #fff;
    border: 2px 2px 2px 2px solid #e1e1e1;
    box-shadow: 0px 0px  1px 1px #e1e1e1;
}
.order{
    width: 675rpx;
    height: 90rpx;
    margin-top: 90rpx;
    border-radius: 10rpx;
    background-color: #f17c0e;
    text-align: center;
}
.content{
    color: #fff;
    letter-spacing: 15rpx;
    padding-top: 25rpx;
}