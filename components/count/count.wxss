.wx-count{
   position: absolute;
   width: 100%;
   height: 100%;
   top: 0;
   background: rgba(0, 0, 0, .5);
}
.count-container{
   margin: 0 auto;
   margin-top: 270rpx;
   position: relative;
   width: 600rpx;
   height: 630rpx;
   max-width: 600rpx;
   border: 2rpx solid #ccc;
   border-radius: 10rpx;
   box-sizing: bordre-box;
   background: #fff;
}
.count-title{
   width: 100%;
   height: 40rpx;
   padding-top: 40rpx;
   text-align: center;
   font-size: 30rpx;
}
.count-metarial{
   float: left;
   padding-left: 10rpx;
   padding-top: 20rpx;
   width: 100rpx;
   line-height: 30rpx;
   font-size: 30rpx;
} 
.main1{
   position: relative;
   height: 30px;
   top: 25px;
}
.count-normal{
   display: inline-block;
   background-color: #ffffff;
   font-size: 25rpx;
   top: 3px;
   left: -50px;
   margin-left: 15px;
}
.count-normal.active{
